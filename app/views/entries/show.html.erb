<h1><%= @entry.word %></h1>
<p>
  <h3>Definition:</h3><%= @entry.definition %>
</p>
<strong>Language: </strong><%= @entry.language %>
<p><%= link_to 'Edit', edit_entry_path(@entry) %> |
  <%= link_to 'Delete', entry_path(@entry.id), method: :delete, data: {confirm: "Are you sure you want to delete #{@entry.word}?"} %>
</p>
<p>
<%= link_to 'Back to entries', entries_path %>
</p>
